synopsis: "General algebraic structures (Ring Like) for Rocq"
description: """
This library defines a flexible algebraic structure covering
semirings, rings, fields, and related variants, with a wide collection
of associated theorems, and basic syntax for sums and products.
"""

depends: [
  "ocaml" {>= "4.08.0"}
  "rocq"  {>= "9.0.0"}
]

build: [
  ["make"]
]

install: [
  ["make" "install"]
]
